{
  "name": "commitlint-template",
  "version": "1.0.0",
  "description": "Template para padronização de commits com Commitlint + Husky",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "setup-hooks": "git config core.hooksPath $(node -p \"require('path').join(__dirname, '.husky').replace(/\\\\/g, '/')\")",
    "postinstall": "git config core.hooksPath $(node -p \"require('path').join(__dirname, '.husky').replace(/\\\\/g, '/')\")"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7"
  } 
}
